#!/bin/bash

PID_FILE=<%= node.hive2.hive_cleaner.pid_file %>
if [ -f $PID_FILE ] ; then
 PID=`cat $PID_FILE`
 kill -0 $PID 2>&1 > /dev/null
 if [ $? -eq 0 ] ; then
     echo "A Hive cleaner is already running. Kill it first."
     exit 1
 fi
fi

nohup <%= node.hive2.base_dir %>/bin/hive_cleaner --connection <%= node.ndb.ip %>:<%= node.ndb.mgmd.port %> --database hops 2>&1 > <%= node.hive2.hive_cleaner.log %> &
echo $! > $PID_FILE

PID=`cat $PID_FILE`

wait_pid_started=5
timeout=0
while [ $timeout -lt $wait_pid_started ] ; do
    sleep 1
    (kill -0 $PID) 2> /dev/null && break
    echo -n "."
    timeout=`expr $timeout + 1`
done
if [ $timeout -eq $wait_pid_started ] ; then
  exit 1
fi

exit 0
