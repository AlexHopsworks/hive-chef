#!/bin/sh
#
# Startup script for hive
#
### BEGIN INIT INFO
# Provides:                     hive-cleaner*
# Required-Start:
# Should-Start:
# Required-Stop:
# Default-Start:                2 3 4 5
# Default-Stop:                 0 1 6
# Short-Description:            start and stop hive-cleaner*
# Description:                  Start/Stop/Restart hive-cleaner
### END INIT INFO

# Variables

START_PROG="<%= node.hive2.base_dir %>/bin/start-hivecleaner.sh"
STOP_PROG="<%= node.hive2.base_dir %>/bin/stop-hivecleaner.sh"
EXEC_WITH_USER="su <%= node.hops.hdfs.user %> -c"

start() {
  ulimit -n 65000 2>&1 > /dev/null
  $EXEC_WITH_USER "$START_PROG"
  return $?
}

stop() {
  "$STOP_PROG"
  return $?
}

status() {
  res=1
  PID_FILE=<%= node.hive2.hive_cleaner.pid_file %>
  if [ -f $PID_FILE ] ; then
     PID=`cat $PID_FILE`
     kill -0 $PID
     res=$?
  fi
  if [ $res -eq 0 ] ; then
   echo "hivecleaner($PID) is running"
  else
   echo "hivecleaner is not running"
  fi
  return $res
}


restart() {
  status
  if [ $? -eq 0 ] ; then
    stop
    sleep 3
  fi
  start
  return $?
}


# user-supplied parameter to stop/start/restart process.
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  reload)
    restart
    ;;
  status)
    status
    ;;
  -h|--help)
    echo ""
    echo "usage: <prog> start|stop|restart|status"
    echo ""
    exit 0
    ;;
  *)
    echo $"Usage: <prog> {start|stop|restart|status}"
    exit 1
  esac


exit $?
