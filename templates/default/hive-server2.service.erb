[Unit]
Description = Hive metaserver
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node.hive2.user %>

PIDFile = <%= node.hive2.pid_file %>
ExecStart = <%= node.hive2.base_dir %>/bin/start-hive-metastore.sh
ExecStop = <%= node.hive2.base_dir %>/bin/stop-hive-metastore.sh
LimitNOFILE = 20000

Type = forking

[Install]
WantedBy = multi-user.target
